escape ^Tt
defencoding UTF-8

defbce "on"
term xterm-256color
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

autodetach on
startup_message off
shell -${SHELL}

defhstatus "^En:^Et"
defscrollback 9999
hardstatus alwayslastline "%w"

hardcopydir $HOME/.screen
hardcopy_append on
vbell off

## bell on hide window
bell "Bell in window %."
activity "Activity in window %."

bind 'd' setenv DISPLAY
bind ^h prev
bind  k kill
screen -t zsh 0 

## caption always "%{= wK} %-w%{=r wR}%n %t%{-}%+w %= %{= wK}%Y/%m/%d %{= wK}%c:%s"

